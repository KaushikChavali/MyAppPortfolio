<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="@string/spotify"
        android:onClick="spotifyStreamer"
        android:id="@+id/spotifyStreamerBtn"
        android:layout_below="@+id/textView"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="@string/scores"
        android:onClick="scoresApp"
        android:id="@+id/scoreBtn"
        android:layout_below="@+id/spotifyStreamerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="@string/library"
        android:onClick="libraryApp"
        android:id="@+id/libraryBtn"
        android:layout_below="@+id/scoreBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="@string/buildBigger"
        android:onClick="buildItBigger"
        android:id="@+id/buildBiggerBtn"
        android:layout_below="@+id/libraryBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="@string/xyzReader"
        android:onClick="xyzReader"
        android:id="@+id/xyzReaderBtn"
        android:layout_below="@+id/buildBiggerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle.Red"
        android:text="@string/capstone"
        android:onClick="capstone"
        android:id="@+id/capStoneBtn"
        android:layout_below="@+id/xyzReaderBtn" />
    </RelativeLayout>
</ScrollView>

